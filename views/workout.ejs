<%- include('header'); %>

    <div class="container">
        <h3><%= workout.name %> </h3>
        <div class="d-flex justify-content-center">
            <img src="https://www.exercise.co.uk/wp/wp-content/uploads/2019/04/Compound-Exercise-Workout.jpg" width="100%" height="100%"
            alt="Paige Vanzant" style="opacity: 0.7">
        </div>
    </div>
<div class="row" style="padding-top: 20px;">
    <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Exercise</th>
          <th>Sets</th>
          <th>Reps</th>
        </tr>
      </thead>
      <tbody>
          <% workout.exercises.forEach(exercise => { %>
            <tr>
                <td><%= exercise.name %></td>
                <td><%= exercise.set %></td>
                <td><%= exercise.repsOrTime %></td>
              </tr>
          <% }) %>
    </table>
</div>
</div>

<%- include('footer'); %>