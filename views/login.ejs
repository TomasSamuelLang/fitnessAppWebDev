<div class="row" style="padding-top: 40px;"">
    <div class="container d-flex justify-content-center">
        <form class="form-signin" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">Please log into your account</h1>
            <div class="form-group">
                <label>Email address</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter email address" required="" autofocus="">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" required="">
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
        </form>
    </div>
</div>
<div class="container" style="padding-top: 40px;">
    <div class="row">
        <p>Need an account? <a href="/register">Click here to register!</a></p>
    </div>
</div>
